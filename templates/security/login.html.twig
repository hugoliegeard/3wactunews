{% extends "base.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <main>
        <!-- Titre de la page -->
        <div class="p-3 mx-auto text-center">
            <h1 class="display-4">Connexion</h1>
        </div>

        <!-- Contenu de la page -->
        <div class="py-5 bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-4 mx-auto">
                        <form method="post">

                            {% if error %}
                                <div
                                    class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <div class="mb-4">
                                <label for="username">E-mail</label>
                                <input type="email" value="{{ last_username }}" name="_username" id="username"
                                       class="form-control" autocomplete="email" required autofocus>
                            </div>

                            <div class="mb-4">
                                <label for="password">Mot de passe</label>
                                <input type="password" name="_password" id="password" class="form-control"
                                       autocomplete="current-password" required>

                                <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
                                       value="{{ csrf_token('authenticate') }}">
                            </div>

                            <button class="btn w-100 btn-dark" type="submit">
                                Connexion
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock %}
