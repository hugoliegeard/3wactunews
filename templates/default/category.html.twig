{% extends "base.html.twig" %}

{% block title %}
    {# Ex depuis app : {{ app.request.get('aliasDeMaCategorie')|capitalize }}#}
    {{ category.name|capitalize }}
{% endblock %}

{% block body %}

    {#{{ dump(app.request) }}#}

    <main>
        <!-- Titre de la page -->
        <div class="p-3 mx-auto text-center">
            <h1 class="display-4">
                {{ category.name|capitalize }}
            </h1>
        </div>

        <!-- Contenu de la page -->
        <div class="py-5 bg-light">
            <div class="container">
                <div class="row">
                    {% for post in category.posts %}
                        {% include 'partials/_card.html.twig' %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
